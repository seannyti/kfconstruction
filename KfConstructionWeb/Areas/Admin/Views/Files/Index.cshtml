@model List<KfConstructionWeb.Models.UploadedFile>
@{
    ViewData["Title"] = "File Manager";
    var search = ViewBag.SearchModel as KfConstructionWeb.Models.ViewModels.FileSearchViewModel;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6">
                    <i class="bi bi-folder2-open me-2"></i>File Manager
                </h1>
                <div>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                    <a asp-action="Upload" class="btn btn-primary">
                        <i class="bi bi-cloud-upload me-2"></i>Upload File
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" class="form-control" name="SearchTerm" 
                               value="@search?.SearchTerm" placeholder="File name, description, tags...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Category</label>
                        <select class="form-select" name="Category">
                            <option value="">All Categories</option>
                            @foreach (var category in (List<string>)ViewBag.Categories)
                            {
                                <option value="@category" selected="@(search?.Category == category)">@category</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Uploaded After</label>
                        <input type="date" class="form-control" name="UploadedAfter" 
                               value="@search?.UploadedAfter?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Uploaded Before</label>
                        <input type="date" class="form-control" name="UploadedBefore" 
                               value="@search?.UploadedBefore?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Visibility</label>
                        <select class="form-select" name="IsPublic">
                            <option value="">All Files</option>
                            <option value="true" selected="@(search?.IsPublic == true)">Public</option>
                            <option value="false" selected="@(search?.IsPublic == false)">Private</option>
                        </select>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-secondary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- File List -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Category</th>
                                <th>Size</th>
                                <th>Uploaded By</th>
                                <th>Uploaded</th>
                                <th>Downloads</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var file in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark me-2"></i>
                                        <a asp-action="Details" asp-route-id="@file.Id">@file.FileName</a>
                                        @if (file.IsEncrypted)
                                        {
                                            <i class="bi bi-shield-lock text-success ms-2" title="Encrypted"></i>
                                        }
                                    </td>
                                    <td><span class="badge bg-info">@file.Category</span></td>
                                    <td>@file.FileSizeFormatted</td>
                                    <td>@file.UploadedBy</td>
                                    <td>@file.UploadedAt.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-secondary">@file.DownloadCount</span></td>
                                    <td>
                                        @if (file.IsPublic)
                                        {
                                            <span class="badge bg-success">Public</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Private</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Download" asp-route-id="@file.Id" 
                                               class="btn btn-outline-primary" title="Download">
                                                <i class="bi bi-download"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@file.Id" 
                                               class="btn btn-outline-secondary" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@file.Id" method="post" 
                                                  class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this file?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i"
                                       asp-route-searchTerm="@search?.SearchTerm"
                                       asp-route-category="@search?.Category"
                                       asp-route-uploadedAfter="@search?.UploadedAfter"
                                       asp-route-uploadedBefore="@search?.UploadedBefore"
                                       asp-route-isPublic="@search?.IsPublic">
                                        @i
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }

                <p class="text-muted text-center mt-3">
                    Showing @Model.Count of @ViewBag.TotalCount files
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No files found. <a asp-action="Upload">Upload your first file</a>.
        </div>
    }
</div>
