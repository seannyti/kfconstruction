@model KfConstructionWeb.Models.UploadedFile
@{
    ViewData["Title"] = $"File Details - {Model.FileName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6">
                    <i class="bi bi-file-earmark-text me-2"></i>File Details
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@Model.FileName</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9"><span class="badge bg-info">@Model.Category</span></dd>

                        <dt class="col-sm-3">File Size</dt>
                        <dd class="col-sm-9">@Model.FileSizeFormatted</dd>

                        <dt class="col-sm-3">Content Type</dt>
                        <dd class="col-sm-9"><code>@Model.ContentType</code></dd>

                        <dt class="col-sm-3">Visibility</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsPublic)
                            {
                                <span class="badge bg-success"><i class="bi bi-unlock me-1"></i>Public</span>
                            }
                            else
                            {
                                <span class="badge bg-warning"><i class="bi bi-lock me-1"></i>Private</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Encryption</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsEncrypted)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-shield-lock me-1"></i>Encrypted (@Model.EncryptionAlgorithm)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Encrypted</span>
                            }
                        </dd>

                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@Model.Description</dd>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.Tags))
                        {
                            <dt class="col-sm-3">Tags</dt>
                            <dd class="col-sm-9">
                                @foreach (var tag in Model.Tags.Split(',').Select(t => t.Trim()))
                                {
                                    <span class="badge bg-secondary me-1">@tag</span>
                                }
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Actions Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-download me-2"></i>Download File
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                              onsubmit="return confirm('Are you sure you want to delete this file? It will be permanently removed after 30 days.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash me-2"></i>Delete File
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Upload Info Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Upload Information</h5>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt>Uploaded By</dt>
                        <dd>@Model.UploadedBy</dd>

                        <dt>Uploaded At</dt>
                        <dd>@Model.UploadedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>

                        <dt>Downloads</dt>
                        <dd><span class="badge bg-secondary">@Model.DownloadCount</span></dd>

                        @if (Model.LastAccessedAt.HasValue)
                        {
                            <dt>Last Accessed</dt>
                            <dd>
                                @Model.LastAccessedAt.Value.ToString("MMM dd, yyyy")<br/>
                                <small class="text-muted">by @Model.LastAccessedBy</small>
                            </dd>
                        }

                        @if (Model.ScheduledPurgeDate.HasValue)
                        {
                            <dt>Scheduled Purge</dt>
                            <dd>
                                <small class="text-muted">
                                    @Model.ScheduledPurgeDate.Value.ToString("MMM dd, yyyy")
                                </small>
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
