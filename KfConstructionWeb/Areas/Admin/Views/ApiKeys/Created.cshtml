@model KfConstructionWeb.Areas.Admin.Controllers.ApiKeysController.ApiKeyDto
@{
    ViewData["Title"] = "API Key Created";
    var plaintext = ViewBag.PlaintextKey as string;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>API Key Created</h2>
    <a asp-area="Admin" asp-controller="ApiKeys" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to API Keys
    </a>
</div>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (!string.IsNullOrEmpty(plaintext))
{
    <div class="alert alert-warning">
        <strong>Copy this key now:</strong>
        <code style="user-select: all;">@plaintext</code>
        <div class="mt-2"><small>This is the only time the full key will be displayed. Store it securely.</small></div>
    </div>
}
<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt><dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Description</dt><dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Created</dt><dd class="col-sm-9">@Model.CreatedAt.ToString("u") by @Model.CreatedBy</dd>
            <dt class="col-sm-3">Expires</dt><dd class="col-sm-9">@(Model.ExpiresAt?.ToString("u") ?? "â€”")</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
