@model List<KfConstructionWeb.Areas.Admin.Controllers.ApiKeysController.ApiKeyDto>
@{
    ViewData["Title"] = "API Keys";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>API Keys</h2>
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Key</a>
</div>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created</th>
            <th>Expires</th>
            <th>Last Used</th>
            <th>Usage</th>
            <th>Status</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var k in Model.OrderByDescending(k => k.CreatedAt))
    {
        <tr class="@(k.IsActive ? "" : "table-warning")">
            <td>@k.Name</td>
            <td>@k.Description</td>
            <td>@k.CreatedAt.ToString("yyyy-MM-dd")<br /><small class="text-muted">@k.CreatedBy</small></td>
            <td>@(k.ExpiresAt?.ToString("yyyy-MM-dd") ?? "—")</td>
            <td>@(k.LastUsedAt?.ToString("yyyy-MM-dd HH:mm") ?? "—")</td>
            <td>@k.UsageCount</td>
            <td>
                @if (!k.IsActive && k.RevokedAt != null)
                {
                    <span class="badge bg-danger">Revoked</span><br />
                    <small>@k.RevokedAt?.ToString("yyyy-MM-dd") by @k.RevokedBy</small>
                }
                else if (k.ExpiresAt != null && k.ExpiresAt < DateTime.UtcNow)
                {
                    <span class="badge bg-secondary">Expired</span>
                }
                else
                {
                    <span class="badge bg-success">Active</span>
                }
            </td>
            <td>
                @if (k.IsActive)
                {
                    <form asp-action="Revoke" method="post" class="d-inline" onsubmit="return confirm('Revoke this key?');">
                        <input type="hidden" name="id" value="@k.Id" />
                        <button class="btn btn-sm btn-warning" type="submit">Revoke</button>
                    </form>
                }
                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this key?');">
                    <input type="hidden" name="id" value="@k.Id" />
                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
