@*
    Email Logs Index View
    Main dashboard for email log management with filtering, pagination,
    and bulk operations for monitoring email delivery status.
*@
@model IEnumerable<KfConstructionWeb.Models.EmailLog>
@{
    ViewData["Title"] = "Email Logs";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalCount = ViewBag.TotalCount ?? 0;
    var currentStatus = ViewBag.CurrentStatus as string;
    var currentEmailType = ViewBag.CurrentEmailType as string;
    var statuses = ViewBag.Statuses as List<string> ?? new List<string>();
    var emailTypes = ViewBag.EmailTypes as List<string> ?? new List<string>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-envelope-fill me-2"></i>Email Logs</h2>
            <p class="text-muted mb-0">Monitor and manage email delivery status</p>
        </div>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üîç Filters</h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select name="status" id="status" class="form-select">
                                <option value="">All Statuses</option>
                                @foreach (var status in statuses)
                                {
                                    <option value="@status" selected="@(status == currentStatus)">@status</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="emailType" class="form-label">Email Type</label>
                            <select name="emailType" id="emailType" class="form-select">
                                <option value="">All Types</option>
                                @foreach (var type in emailTypes)
                                {
                                    <option value="@type" selected="@(type == currentEmailType)">@type</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="pageSize" class="form-label">Page Size</label>
                            <select name="pageSize" id="pageSize" class="form-select">
                                <option value="10">10</option>
                                <option value="20" selected="@(ViewBag.PageSize == 20)">20</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <strong>üìä Total Records:</strong> @totalCount emails found
                @if (!string.IsNullOrEmpty(currentStatus) || !string.IsNullOrEmpty(currentEmailType))
                {
                    <span class="ms-3">
                        <strong>Active Filters:</strong>
                        @if (!string.IsNullOrEmpty(currentStatus))
                        {
                            <span class="badge bg-primary me-1">Status: @currentStatus</span>
                        }
                        @if (!string.IsNullOrEmpty(currentEmailType))
                        {
                            <span class="badge bg-success">Type: @currentEmailType</span>
                        }
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Email Logs Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìß Email Logs (@totalCount total)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 100px;">Status</th>
                                        <th style="width: 130px;">Type</th>
                                        <th style="width: 220px;">To Email</th>
                                        <th>Subject</th>
                                        <th style="width: 110px;">Created</th>
                                        <th style="width: 110px;">Sent</th>
                                        <th style="width: 120px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var email in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (email.Status == "Sent")
                                                {
                                                    <span class="badge bg-success">‚úÖ Sent</span>
                                                }
                                                else if (email.Status == "Failed")
                                                {
                                                    <span class="badge bg-danger">‚ùå Failed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">‚è≥ Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@email.EmailType</span>
                                            </td>
                                            <td style="max-width: 220px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                <strong title="@email.ToEmail">@email.ToEmail</strong>
                                            </td>
                                            <td style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                <span title="@email.Subject">@email.Subject</span>
                                            </td>
                                            <td style="white-space: nowrap;">
                                                <small>@email.CreatedAt.ToString("MM/dd/yyyy HH:mm")</small>
                                            </td>
                                            <td style="white-space: nowrap;">
                                                @if (email.SentAt.HasValue)
                                                {
                                                    <small>@email.SentAt.Value.ToString("MM/dd/yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@email.Id" class="btn btn-outline-primary btn-sm" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteEmail(@email.Id)" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">No Email Logs Found</h4>
                            <p class="text-muted">No emails match your current filters.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Email logs pagination">
                    <ul class="pagination justify-content-center">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-status="@currentStatus" asp-route-emailType="@currentEmailType">Previous</a>
                            </li>
                        }

                        @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@currentStatus" asp-route-emailType="@currentEmailType">@i</a>
                            </li>
                        }

                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-status="@currentStatus" asp-route-emailType="@currentEmailType">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

<script>
function deleteEmail(id) {
    if (confirm('Are you sure you want to delete this email log?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("Delete")';
        
        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = id;
        
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '__RequestVerificationToken';
        tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
        
        form.appendChild(idInput);
        form.appendChild(tokenInput);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>