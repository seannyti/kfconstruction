@*
    Email Log Details View
    Displays comprehensive information about a specific email log entry,
    including delivery status, recipient details, and email content preview.
*@
@model KfConstructionWeb.Models.EmailLog
@{
    ViewData["Title"] = $"Email Log Details - {Model.Subject}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-envelope-fill me-2"></i>Email Log Details</h2>
            <p class="text-muted mb-0">Detailed view of email delivery information</p>
        </div>
        <a asp-area="Admin" asp-controller="EmailLogs" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Email Logs
        </a>
    </div>

    <!-- Email Status Overview -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìä Email Status</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                @if (Model.Status == "Sent")
                                {
                                    <i class="bi bi-check-circle-fill text-success display-4"></i>
                                    <h5 class="text-success mt-2">‚úÖ Successfully Sent</h5>
                                }
                                else if (Model.Status == "Failed")
                                {
                                    <i class="bi bi-x-circle-fill text-danger display-4"></i>
                                    <h5 class="text-danger mt-2">‚ùå Failed to Send</h5>
                                }
                                else
                                {
                                    <i class="bi bi-clock-fill text-warning display-4"></i>
                                    <h5 class="text-warning mt-2">‚è≥ Pending</h5>
                                }
                            </div>
                        </div>
                        <div class="col-md-9">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th width="150">Email Type:</th>
                                        <td><span class="badge bg-info">@Model.EmailType</span></td>
                                    </tr>
                                    <tr>
                                        <th>Created At:</th>
                                        <td>@Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</td>
                                    </tr>
                                    @if (Model.SentAt.HasValue)
                                    {
                                        <tr>
                                            <th>Sent At:</th>
                                            <td>@Model.SentAt.Value.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</td>
                                        </tr>
                                    }
                                    @if (Model.RetryCount > 0)
                                    {
                                        <tr>
                                            <th>Retry Count:</th>
                                            <td>@Model.RetryCount attempts</td>
                                        </tr>
                                    }
                                    @if (Model.RetryAt.HasValue)
                                    {
                                        <tr>
                                            <th>Next Retry:</th>
                                            <td>@Model.RetryAt.Value.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Email Details -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üì¨ Email Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>üì§ Sender</h6>
                            <p class="form-control-plaintext">@Model.FromEmail</p>
                        </div>
                        <div class="col-md-6">
                            <h6>üì• Recipient</h6>
                            <p class="form-control-plaintext">@Model.ToEmail</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h6>üìù Subject</h6>
                            <p class="form-control-plaintext">@Model.Subject</p>
                        </div>
                    </div>
                    @if (Model.RelatedEntityId.HasValue)
                    {
                        <div class="row">
                            <div class="col-12">
                                <h6>üîó Related Entity ID</h6>
                                <p class="form-control-plaintext">@Model.RelatedEntityId</p>
                            </div>
                        </div>
                    }
                    
                    <!-- Email Content Preview -->
                    @if (!string.IsNullOrEmpty(Model.BodyHtml))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6>üìÑ Email Content Preview</h6>
                                <div style="width: 100%; border: 1px solid #ddd; background: white; border-radius: 0.375rem;">
                                    <iframe sandbox="allow-same-origin" 
                                            srcdoc="@Html.Raw(Model.BodyHtml)" 
                                            style="width: 100%; min-height: 300px; border: none; display: block; border-radius: 0.375rem;" 
                                            frameborder="0"
                                            onload="this.style.height = Math.max(300, this.contentWindow.document.body.scrollHeight + 30) + 'px'">
                                    </iframe>
                                </div>
                            </div>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.BodyText))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6>üìÑ Email Content</h6>
                                <div class="bg-light p-3 border rounded" style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;">@Model.BodyText</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Error Information (if failed) -->
    @if (Model.Status == "Failed" && !string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">üö® Error Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger">
                            <strong>Error Message:</strong><br>
                            <code>@Model.ErrorMessage</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-center py-3">
                <button type="button" class="btn btn-danger btn-lg px-4" onclick="deleteEmail(@Model.Id)">
                    <i class="bi bi-trash"></i> Delete This Log
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function deleteEmail(id) {
    if (confirm('Are you sure you want to delete this email log?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("Delete")';
        
        const idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = id;
        
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '__RequestVerificationToken';
        tokenInput.value = '@Html.AntiForgeryToken()';
        
        form.appendChild(idInput);
        form.appendChild(tokenInput);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>