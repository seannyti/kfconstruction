@model IEnumerable<KfConstructionWeb.Models.Receipt>
@{
    ViewData["Title"] = "Receipts";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 mb-3 mb-md-0">
            <h2><i class="bi bi-receipt-cutoff me-2"></i>Receipt Management</h2>
        </div>
        <div class="col-12">
            <div class="d-flex flex-wrap gap-2">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i><span class="d-none d-sm-inline">Dashboard</span>
                </a>
                <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#printReceiptsModal">
                    <i class="bi bi-printer me-1"></i><span class="d-none d-sm-inline">Print</span>
                </button>
                <a asp-action="Upload" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle me-1"></i><span class="d-none d-sm-inline">Upload</span>
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Vendor</th>
                                <th>Amount</th>
                                <th>Category</th>
                                <th>Payment</th>
                                <th>OCR</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var receipt in Model)
                            {
                                <tr>
                                    <td>@receipt.PurchaseDate.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <strong>@receipt.Vendor</strong>
                                        @if (!string.IsNullOrEmpty(receipt.ReceiptNumber))
                                        {
                                            <br><small class="text-muted">@receipt.ReceiptNumber</small>
                                        }
                                    </td>
                                    <td><strong class="text-success">$@receipt.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        <span class="badge bg-info">@receipt.Category</span>
                                    </td>
                                    <td>
                                        @receipt.PaymentMethod
                                        @if (!string.IsNullOrEmpty(receipt.CardLastFour))
                                        {
                                            <br><small class="text-muted">****@receipt.CardLastFour</small>
                                        }
                                    </td>
                                    <td>
                                        @if (receipt.OcrProcessed)
                                        {
                                            <span class="badge bg-success" title="Confidence: @receipt.OcrConfidence?.ToString("P0")">
                                                <i class="bi bi-check-circle"></i> Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> No
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@receipt.Id" class="btn btn-outline-secondary" title="View Details">
                                                <i class="bi bi-eye me-1"></i> View
                                            </a>
                                            <a asp-action="Download" asp-route-id="@receipt.Id" class="btn btn-outline-success" title="Download">
                                                <i class="bi bi-download me-1"></i> Download
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" onclick="confirmDeleteReceipt(@receipt.Id)" title="Delete">
                                                <i class="bi bi-trash me-1"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
            <h4>No receipts uploaded yet</h4>
            <p>Upload your first receipt to get started with AI-powered expense tracking!</p>
            <a asp-action="Upload" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Upload First Receipt
            </a>
        </div>
    }
</div>

<!-- Print Receipts Modal -->
<div class="modal fade" id="printReceiptsModal" tabindex="-1" aria-labelledby="printReceiptsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="printReceiptsModalLabel">
                    <i class="bi bi-printer me-2"></i>Print Receipts by Date
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="printReceiptsForm">
                    <div class="mb-3">
                        <label for="printStartDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="printStartDate" required>
                    </div>
                    <div class="mb-3">
                        <label for="printEndDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="printEndDate" required>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        This will open a new window with receipts from the selected date range in a print-friendly format.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="printReceipts()">
                    <i class="bi bi-printer me-1"></i>View & Print
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Hidden form for delete with anti-forgery token -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        window.__receipts = {
            deleteBaseUrl: '@Url.Action("Delete", "Receipts", new { area = "Admin" })',
            printBaseUrl: '@Url.Action("PrintView", "Receipts", new { area = "Admin" })'
        };
    </script>
    <script src="~/js/admin.receipts.js" asp-append-version="true"></script>
}
