@model KfConstructionWeb.Models.Receipt

@{
    ViewData["Title"] = $"Receipt Details - {Model.Vendor}";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Receipts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Vendor</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column: Receipt Image -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-image me-2"></i>Receipt Image
                    </h5>
                    <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-sm btn-light">
                        <i class="bi bi-download me-1"></i>Download
                    </a>
                </div>
                <div class="card-body text-center">
                    @if (Model.ContentType.StartsWith("image/"))
                    {
                        <img src="@Url.Action("Download", new { id = Model.Id })" 
                             alt="Receipt Image" 
                             class="img-fluid rounded shadow-sm" 
                             style="max-height: 600px; width: auto;" />
                    }
                    else if (Model.ContentType == "application/pdf")
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-pdf display-1 text-danger"></i>
                            <p class="mt-3 text-muted">PDF Document</p>
                            <p class="small">@Model.OriginalFileName</p>
                            <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-download me-1"></i>Download PDF
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark display-1 text-secondary"></i>
                            <p class="mt-3 text-muted">@Model.ContentType</p>
                            <p class="small">@Model.OriginalFileName</p>
                        </div>
                    }
                    <div class="mt-3 small text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        File Size: @(Model.FileSizeBytes / 1024.0).ToString("N2") KB
                    </div>
                </div>
            </div>

            @if (Model.OcrProcessed && !string.IsNullOrWhiteSpace(Model.OcrRawText))
            {
                <div class="card shadow-sm mt-3">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-file-text me-2"></i>OCR Extracted Text
                        </h6>
                    </div>
                    <div class="card-body">
                        <pre class="small mb-0" style="max-height: 300px; overflow-y: auto; white-space: pre-wrap;">@Model.OcrRawText</pre>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Receipt Details -->
        <div class="col-lg-7">
            <!-- Receipt Information -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt-cutoff me-2"></i>Receipt Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Receipt Number</label>
                            <p class="h6">
                                @if (!string.IsNullOrWhiteSpace(Model.ReceiptNumber))
                                {
                                    <span class="badge bg-secondary">@Model.ReceiptNumber</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Purchase Date</label>
                            <p class="h6">@Model.PurchaseDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Vendor</label>
                            <p class="h5 mb-0">@Model.Vendor</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Total Amount</label>
                            <p class="h4 text-success mb-0">
                                <strong>@Model.TotalAmount.ToString("C")</strong>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Category</label>
                            <p class="h6">
                                <span class="badge bg-info">@Model.Category</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Payment Method</label>
                            <p class="h6">
                                @Model.PaymentMethod
                                @if (!string.IsNullOrWhiteSpace(Model.CardLastFour))
                                {
                                    <span class="text-muted">****@Model.CardLastFour</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-12">
                                <label class="form-label text-muted small mb-1">Notes</label>
                                <p class="mb-0">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- OCR Processing Status -->
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-cpu me-2"></i>OCR Processing Status
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small mb-1">OCR Status</label>
                            <p class="mb-0">
                                @if (Model.OcrProcessed)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Processed Successfully
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Not Processed
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small mb-1">Confidence Score</label>
                            <p class="mb-0">
                                @if (Model.OcrConfidence.HasValue)
                                {
                                    var confidence = Model.OcrConfidence.Value * 100;
                                    var badgeClass = confidence >= 80 ? "bg-success" : confidence >= 60 ? "bg-warning" : "bg-danger";
                                    <span class="badge @badgeClass">
                                        @confidence.ToString("N1")%
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.OcrError))
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>OCR Error:</strong> @Model.OcrError
                        </div>
                    }
                </div>
            </div>

            <!-- Security & Encryption -->
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-shield-lock me-2"></i>Security & Encryption
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-muted small mb-1">Encryption Status</label>
                            <p class="mb-0">
                                @if (Model.IsEncrypted)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-lock-fill me-1"></i>Encrypted
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-unlock me-1"></i>Not Encrypted
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-muted small mb-1">Encryption Algorithm</label>
                            <p class="mb-0 small">@Model.EncryptionAlgorithm</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-muted small mb-1">Access Count</label>
                            <p class="mb-0">
                                <span class="badge bg-info">@Model.AccessCount times</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label text-muted small mb-1">Last Accessed</label>
                            <p class="mb-0 small">
                                @if (Model.LastAccessedAt.HasValue)
                                {
                                    <span>@Model.LastAccessedAt.Value.ToString("MM/dd/yyyy HH:mm")</span>
                                    if (!string.IsNullOrWhiteSpace(Model.LastAccessedBy))
                                    {
                                        <br />
                                        <span class="text-muted">by @Model.LastAccessedBy</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Audit Trail -->
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Audit Trail
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Created</label>
                            <p class="small mb-0">
                                @Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")
                                <br />
                                <span class="text-muted">by @Model.CreatedBy</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small mb-1">Last Modified</label>
                            <p class="small mb-0">
                                @if (Model.ModifiedAt.HasValue)
                                {
                                    <span>@Model.ModifiedAt.Value.ToString("MM/dd/yyyy HH:mm")</span>
                                    <br />
                                    if (!string.IsNullOrWhiteSpace(Model.ModifiedBy))
                                    {
                                        <span class="text-muted">by @Model.ModifiedBy</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Never modified</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (Model.ScheduledPurgeDate.HasValue)
                    {
                        <div class="alert alert-info small mb-0">
                            <i class="bi bi-calendar-event me-1"></i>
                            <strong>Retention:</strong> Scheduled for purge on @Model.ScheduledPurgeDate.Value.ToString("MM/dd/yyyy")
                        </div>
                    }
                </div>
            </div>

            <!-- Access Log History -->
            @if (Model.AccessLogs.Any())
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Recent Access History
                        </h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Action</th>
                                        <th>User</th>
                                        <th>IP Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.AccessLogs)
                                    {
                                        <tr>
                                            <td class="small">@log.AccessedAt.ToString("MM/dd/yyyy HH:mm:ss")</td>
                                            <td>
                                                @if (log.Action == "View")
                                                {
                                                    <span class="badge bg-primary">@log.Action</span>
                                                }
                                                else if (log.Action == "Download")
                                                {
                                                    <span class="badge bg-info">@log.Action</span>
                                                }
                                                else if (log.Action == "Delete")
                                                {
                                                    <span class="badge bg-danger">@log.Action</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@log.Action</span>
                                                }
                                            </td>
                                            <td class="small">@log.AccessedBy</td>
                                            <td class="small text-muted">@(log.IpAddress ?? "—")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @if (Model.AccessCount > 10)
                    {
                        <div class="card-footer text-muted small">
                            Showing 10 most recent access logs out of @Model.AccessCount total.
                        </div>
                    }
                </div>
            }

            <!-- Action Buttons -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-download me-1"></i>Download
                        </a>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.Id)">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden form for delete with anti-forgery token -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(receiptId) {
            if (confirm('Are you sure you want to delete this receipt?\n\nThis action will soft-delete the receipt with a 30-day grace period before permanent deletion.')) {
                // Get the existing form and update its action
                const form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "Receipts", new { area = "Admin" })/' + receiptId;
                form.submit();
            }
        }
    </script>
}
