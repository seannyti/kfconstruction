@model IEnumerable<BroadcastMessage>

@{
    ViewData["Title"] = "Broadcast Messaging";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2>
                        <i class="fas fa-bullhorn me-2"></i>Broadcast Messaging
                    </h2>
                    <p class="text-muted">Send announcements to users</p>
                </div>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-paper-plane text-primary me-2"></i>Total Sent
                    </h5>
                    <h2 class="mb-0">@ViewBag.TotalSent</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-check-circle text-success me-2"></i>Active
                    </h5>
                    <h2 class="mb-0">@ViewBag.Active</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-users text-info me-2"></i>Recipients
                    </h5>
                    <h2 class="mb-0">@ViewBag.TotalRecipients</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-eye text-warning me-2"></i>Total Read
                    </h5>
                    <h2 class="mb-0">@ViewBag.TotalRead</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Send New Broadcast
        </a>
    </div>

    <!-- Messages List -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Broadcast Messages
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Type</th>
                                <th>Target</th>
                                <th>Recipients</th>
                                <th>Read Rate</th>
                                <th>Sent</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var msg in Model)
                            {
                                var readRate = msg.RecipientCount > 0 
                                    ? (double)msg.ReadCount / msg.RecipientCount * 100 
                                    : 0;
                                var isExpired = msg.ExpiresAt.HasValue && msg.ExpiresAt.Value < DateTime.UtcNow;
                                
                                <tr>
                                    <td>
                                        <strong>@msg.Subject</strong>
                                        @if (msg.SendEmail)
                                        {
                                            <i class="fas fa-envelope ms-2 text-primary" title="Email sent"></i>
                                        }
                                        @if (msg.ShowInApp)
                                        {
                                            <i class="fas fa-bell ms-1 text-info" title="In-app notification"></i>
                                        }
                                    </td>
                                    <td>
                                        @if (msg.MessageType == "Alert")
                                        {
                                            <span class="badge bg-danger">@msg.MessageType</span>
                                        }
                                        else if (msg.MessageType == "Warning")
                                        {
                                            <span class="badge bg-warning text-dark">@msg.MessageType</span>
                                        }
                                        else if (msg.MessageType == "Info")
                                        {
                                            <span class="badge bg-info">@msg.MessageType</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">@msg.MessageType</span>
                                        }
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(msg.TargetRole))
                                        {
                                            <span class="badge bg-secondary">All Users</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark">@msg.TargetRole</span>
                                        }
                                    </td>
                                    <td>@msg.RecipientCount</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @(readRate >= 75 ? "bg-success" : readRate >= 50 ? "bg-info" : readRate >= 25 ? "bg-warning" : "bg-danger")" 
                                                 role="progressbar" 
                                                 style="width: @readRate%;" 
                                                 aria-valuenow="@readRate" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @readRate.ToString("F0")%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @msg.SentAt.ToString("yyyy-MM-dd HH:mm")
                                        <br />
                                        <small class="text-muted">by @msg.SentBy</small>
                                    </td>
                                    <td>
                                        @if (isExpired)
                                        {
                                            <span class="badge bg-secondary">Expired</span>
                                        }
                                        else if (msg.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@msg.Id" class="btn btn-info text-white me-1">
                                            View
                                        </a>
                                        @if (msg.IsActive && !isExpired)
                                        {
                                            <button type="button" class="btn btn-warning me-1" 
                                                    onclick="confirmDeactivate(@msg.Id, '@msg.Subject')">
                                                Deactivate
                                            </button>
                                        }
                                        <button type="button" class="btn btn-danger" 
                                                onclick="confirmDelete(@msg.Id, '@msg.Subject')">
                                            Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No broadcast messages sent yet.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Send First Broadcast
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Hidden Forms -->
<form id="deactivateForm" asp-action="Deactivate" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deactivateId" />
</form>

<form id="deleteForm" asp-action="Delete" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script>
        function confirmDeactivate(id, subject) {
            if (confirm('Are you sure you want to deactivate the broadcast message "' + subject + '"?\n\nUsers will no longer see this message.')) {
                document.getElementById('deactivateId').value = id;
                document.getElementById('deactivateForm').submit();
            }
        }

        function confirmDelete(id, subject) {
            if (confirm('Are you sure you want to delete the broadcast message "' + subject + '"?\n\nThis action cannot be undone.')) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}
