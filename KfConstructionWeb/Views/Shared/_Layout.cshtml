@using Microsoft.EntityFrameworkCore
@using KfConstructionWeb.Data
@inject ApplicationDbContext DbContext
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@(ViewData["SiteDescription"] ?? "Professional construction services")" />
    <meta name="author" content="@(ViewData["CompanyName"] ?? "KF Construction")" />
    <title>@ViewData["Title"] - @(ViewData["CompanyName"] ?? "KF Construction")</title>
    
    <!-- PWA Support -->
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#0d6efd" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="KF Construction" />
    <link rel="apple-touch-icon" href="~/images/icon-192.png" />
    
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KfConstructionWeb.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark construction-nav">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase ls-1" asp-area="" asp-controller="Home" asp-action="Index">
                    @(ViewData["CompanyName"] ?? "KNUDSON & FAMILY CONSTRUCTION")
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Services" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Services">
                                Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">
                                About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Quote" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Quote">
                                Get a Quote
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Testimonials" ? "active" : "")" asp-area="" asp-controller="Testimonials" asp-action="Index">
                                Testimonials
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact">
                                Contact
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    Admin
                                </a>
                            </li>
                        }
                        @* Broadcast bell for authenticated users *@
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @await Component.InvokeAsync("BroadcastBell")
                        }
                        @if (User.IsInRole("User") && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                                    Profile
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content">
        <main role="main" class="py-4">
            @if (User.Identity?.IsAuthenticated == true)
            {
                @await Component.InvokeAsync("BroadcastBanner")
            }
            @if (User.Identity?.IsAuthenticated == true)
            {
                var userEmail = User.Identity.Name;
                var client = await DbContext.Clients.FirstOrDefaultAsync(c => c.Email == userEmail);
                var displayName = client != null ? $"{client.FirstName} {client.LastName}" : userEmail;
                
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    Hello, <strong>@displayName</strong>!
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <partial name="_TempDataMessages" />
            @RenderBody()
        </main>
    </div>

    <footer class="construction-footer mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-warning fw-bold">@(ViewData["CompanyName"] ?? "KF Construction")</h5>
                    <p class="text-light mb-0">@(ViewData["SiteDescription"] ?? "Building Your Dreams, One Project at a Time")</p>
                    <div class="mt-2">
                        @if (!string.IsNullOrEmpty(ViewData["CompanyEmail"]?.ToString()))
                        {
                            <p class="text-light mb-1">
                                <a href="mailto:@ViewData["CompanyEmail"]" class="text-warning text-decoration-none">@ViewData["CompanyEmail"]</a>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(ViewData["CompanyPhone"]?.ToString()))
                        {
                            <p class="text-light mb-1">
                                <a href="tel:@ViewData["CompanyPhone"]" class="text-warning text-decoration-none">@ViewData["CompanyPhone"]</a>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(ViewData["CompanyAddress"]?.ToString()))
                        {
                            <p class="text-light mb-0">
                                <span class="text-light">@ViewData["CompanyAddress"]</span>
                            </p>
                        }
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-light mb-0">&copy; @DateTime.Now.Year @(ViewData["CompanyName"] ?? "KF Construction") - All Rights Reserved</p>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-warning text-decoration-none">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- PWA Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(registration => {
                        console.log('PWA: Service Worker registered successfully', registration.scope);
                    })
                    .catch(error => {
                        console.log('PWA: Service Worker registration failed', error);
                    });
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
