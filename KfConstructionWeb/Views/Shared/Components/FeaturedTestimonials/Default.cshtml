@model IEnumerable<Testimonial>
@{
    var averageRating = ViewBag.AverageRating as double? ?? 0;
    var totalTestimonials = ViewBag.TotalTestimonials as int? ?? 0;
}

@if (Model.Any())
{
    <section class="featured-testimonials py-5 bg-light">
        <div class="container">
            <!-- Section Header -->
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="display-6 fw-bold mb-3">What Our Clients Say</h2>
                    <p class="lead text-muted mb-4">
                        Don't just take our word for it. Here's what our satisfied clients have to say about working with KF Construction.
                    </p>
                    
                    @if (totalTestimonials > 0)
                    {
                        <div class="rating-summary d-inline-flex align-items-center bg-white p-3 rounded shadow-sm">
                            <div class="rating-stars me-3">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= Math.Round(averageRating) ? "text-warning" : "text-muted")"></i>
                                }
                            </div>
                            <div class="rating-text">
                                <strong class="h5 mb-0 text-primary">@averageRating.ToString("F1")</strong>
                                <small class="text-muted d-block">Based on @totalTestimonials review@(totalTestimonials != 1 ? "s" : "")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Testimonials Grid -->
            <div class="row">
                @foreach (var testimonial in Model)
                {
                    <div class="col-lg-4 mb-4">
                        <div class="testimonial-card card h-100 border-0 shadow-sm">
                            <div class="card-body p-4 d-flex flex-column">
                                <!-- Quote Icon -->
                                <div class="quote-icon mb-3">
                                    <i class="fas fa-quote-left fa-2x text-primary opacity-50"></i>
                                </div>

                                <!-- Rating -->
                                <div class="rating mb-3">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= testimonial.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </div>

                                <!-- Testimonial Content -->
                                <blockquote class="flex-grow-1 mb-4">
                                    <p class="mb-0 fst-italic">
                                        "@testimonial.Content"
                                    </p>
                                </blockquote>

                                <!-- Client Information -->
                                <div class="client-info">
                                    <div class="row align-items-center">
                                        @if (!string.IsNullOrEmpty(testimonial.PhotoUrl))
                                        {
                                            <div class="col-auto">
                                                <img src="@testimonial.PhotoUrl" alt="@testimonial.Name" 
                                                     class="rounded-circle client-avatar" 
                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                            </div>
                                        }
                                        <div class="col">
                                            <h6 class="mb-0 fw-bold text-dark">@testimonial.DisplayName</h6>
                                            @if (!string.IsNullOrEmpty(testimonial.Location))
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-map-marker-alt me-1"></i>@testimonial.Location
                                                </small>
                                            }
                                            @if (testimonial.ServiceType.HasValue)
                                            {
                                                <div class="mt-1">
                                                    <span class="badge bg-primary bg-opacity-10 text-primary small">
                                                        @(testimonial.ServiceType?.ToString().Replace("_", " ") ?? string.Empty)
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Service Type Display -->
                                @if (testimonial.ServiceType.HasValue)
                                {
                                    <div class="mt-3 pt-3 border-top">
                                        <small class="text-muted">
                                            <i class="fas fa-hammer me-1"></i>
                                            Service: @testimonial.ServiceType.Value.ToString()
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Call to Action -->
            <div class="row mt-5">
                <div class="col-lg-8 mx-auto text-center">
                    <div class="cta-section bg-primary text-white p-4 rounded">
                        <h4 class="mb-3">Ready to Join Our Satisfied Clients?</h4>
                        <p class="mb-4">
                            Experience the KF Construction difference. Quality workmanship, professional service, 
                            and exceptional results that speak for themselves.
                        </p>
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a href="@Url.Action("Contact", "Home")" class="btn btn-light btn-lg">
                                <i class="fas fa-phone me-2"></i>Get Your Quote
                            </a>
                            <a href="@Url.Action("Index", "Testimonials")" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-comments me-2"></i>Read All Reviews
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <!-- Minimal section when no testimonials are available -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="display-6 fw-bold mb-3">Building Trust, One Project at a Time</h2>
                    <p class="lead text-muted mb-4">
                        At KF Construction, client satisfaction is our top priority. We're committed to delivering 
                        exceptional results that exceed expectations.
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a href="@Url.Action("Submit", "Testimonials")" class="btn btn-primary btn-lg">
                            <i class="fas fa-comments me-2"></i>Share Your Experience
                        </a>
                        <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-phone me-2"></i>Get Started
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}