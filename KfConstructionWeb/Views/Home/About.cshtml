@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-info-circle text-warning me-3"></i>About Us
        </h1>
        <p class="lead text-muted">
            Building Excellence Since Day One
        </p>
    </div>

    <!-- Company Overview -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div class="bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                <div class="text-center text-muted">
                    <i class="bi bi-building display-1"></i>
                    <p class="mt-3">Company Photo</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <h2 class="fw-bold mb-4">Our Story</h2>
            <p class="text-muted mb-3">
                Welcome to <strong>@(ViewData["CompanyName"] ?? "KF Construction")</strong>, your trusted partner in construction excellence. 
                Since our founding, we have been dedicated to delivering high-quality construction services that exceed our clients' expectations.
            </p>
            <p class="text-muted mb-3">
                Based in North Dakota, we specialize in residential and commercial construction projects of all sizes. Our team of 
                skilled professionals brings years of experience and a commitment to craftsmanship that sets us apart in the industry.
            </p>
            <p class="text-muted mb-4">
                We believe that every project, whether it's a custom home, commercial building, or renovation, deserves the same level 
                of attention to detail, quality workmanship, and professional service. Our reputation is built on trust, integrity, 
                and delivering results that stand the test of time.
            </p>
            <div class="d-flex gap-3 flex-wrap">
                <a asp-controller="Home" asp-action="Services" class="btn btn-warning">
                    <i class="bi bi-gear-wide-connected me-2"></i>Our Services
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-warning">
                    <i class="bi bi-envelope me-2"></i>Contact Us
                </a>
            </div>
        </div>
    </div>

    <!-- Mission, Vision, Values -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-warning">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-bullseye display-3 text-warning mb-3"></i>
                    <h3 class="h5 fw-bold mb-3">Our Mission</h3>
                    <p class="text-muted mb-0">
                        To deliver exceptional construction services that transform our clients' visions into reality, while maintaining 
                        the highest standards of safety, quality, and professionalism.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-warning">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-eye display-3 text-warning mb-3"></i>
                    <h3 class="h5 fw-bold mb-3">Our Vision</h3>
                    <p class="text-muted mb-0">
                        To be the most trusted and respected construction company in North Dakota, known for our integrity, 
                        innovation, and unwavering commitment to client satisfaction.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-warning">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-heart display-3 text-warning mb-3"></i>
                    <h3 class="h5 fw-bold mb-3">Our Values</h3>
                    <p class="text-muted mb-0">
                        Integrity, Excellence, Safety, Accountability, and Respect guide everything we do. These core values 
                        shape our culture and ensure every project meets our high standards.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Why Choose Us -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="fw-bold text-center mb-5">Why Choose Us</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3" style="min-width: 60px; height: 60px;">
                            <i class="bi bi-shield-check display-6 text-warning"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2">Licensed & Insured</h5>
                            <p class="text-muted mb-0">
                                Fully licensed, bonded, and insured for your complete peace of mind and protection.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3" style="min-width: 60px; height: 60px;">
                            <i class="bi bi-people display-6 text-warning"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2">Experienced Team</h5>
                            <p class="text-muted mb-0">
                                Our skilled professionals bring years of expertise to every project we undertake.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3" style="min-width: 60px; height: 60px;">
                            <i class="bi bi-clock-history display-6 text-warning"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2">On-Time Delivery</h5>
                            <p class="text-muted mb-0">
                                We respect your time and are committed to completing projects on schedule.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3" style="min-width: 60px; height: 60px;">
                            <i class="bi bi-award display-6 text-warning"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2">Quality Guarantee</h5>
                            <p class="text-muted mb-0">
                                We stand behind our work with comprehensive warranties and ongoing support.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3" style="min-width: 60px; height: 60px;">
                            <i class="bi bi-cash-coin display-6 text-warning"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2">Transparent Pricing</h5>
                            <p class="text-muted mb-0">
                                Fair, competitive pricing with no hidden fees or surprise charges.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3" style="min-width: 60px; height: 60px;">
                            <i class="bi bi-chat-dots display-6 text-warning"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2">Clear Communication</h5>
                            <p class="text-muted mb-0">
                                We keep you informed every step of the way with regular updates and open dialogue.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mb-5">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body p-5">
                <h2 class="h3 fw-bold mb-3">Ready to Work With Us?</h2>
                <p class="lead mb-4">Let's discuss your construction project today</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-warning btn-lg">
                        <i class="bi bi-envelope me-2"></i>Get a Free Quote
                    </a>
                    <a asp-controller="Testimonials" asp-action="Index" class="btn btn-outline-warning btn-lg">
                        <i class="bi bi-chat-heart me-2"></i>Read Testimonials
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
