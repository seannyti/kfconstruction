@{
    ViewData["Title"] = "Our Services";
}

<div class="container">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-gear-wide-connected text-warning me-3"></i>Our Services
        </h1>
        <p class="lead text-muted">
            Professional construction services tailored to meet your needs
        </p>
    </div>

    <!-- Services Grid -->
    <div class="row g-4 mb-5">
        <!-- Service 1: Residential Construction -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start mb-3">
                        <div class="service-icon bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-house-door display-5 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="h4 fw-bold mb-2">Residential Construction</h3>
                            <p class="text-muted mb-3">
                                From custom homes to renovations, we bring your vision to life with quality craftsmanship and attention to detail.
                            </p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Custom Home Building</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Home Additions & Extensions</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Kitchen & Bathroom Remodeling</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Basement Finishing</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service 2: Commercial Construction -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start mb-3">
                        <div class="service-icon bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-building display-5 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="h4 fw-bold mb-2">Commercial Construction</h3>
                            <p class="text-muted mb-3">
                                Professional commercial building services for businesses of all sizes, delivered on time and within budget.
                            </p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Office Buildings</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Retail Spaces</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Warehouses & Industrial</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Tenant Improvements</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service 3: Renovation & Remodeling -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start mb-3">
                        <div class="service-icon bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-hammer display-5 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="h4 fw-bold mb-2">Renovation & Remodeling</h3>
                            <p class="text-muted mb-3">
                                Transform your existing space with expert renovation and remodeling services that enhance functionality and aesthetics.
                            </p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Interior Renovations</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Exterior Updates</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Historic Restoration</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Energy Efficiency Upgrades</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service 4: Project Management -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start mb-3">
                        <div class="service-icon bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-clipboard-check display-5 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="h4 fw-bold mb-2">Project Management</h3>
                            <p class="text-muted mb-3">
                                Comprehensive project management services ensuring your construction project runs smoothly from start to finish.
                            </p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Budget Planning & Control</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Timeline Management</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Quality Assurance</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Vendor Coordination</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service 5: Design-Build Services -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start mb-3">
                        <div class="service-icon bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-pencil-square display-5 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="h4 fw-bold mb-2">Design-Build Services</h3>
                            <p class="text-muted mb-3">
                                Streamlined construction process combining design and building phases for efficient project delivery.
                            </p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Conceptual Design</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Architectural Planning</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Construction Execution</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Single Point of Contact</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service 6: Maintenance & Repair -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start mb-3">
                        <div class="service-icon bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-tools display-5 text-warning"></i>
                        </div>
                        <div>
                            <h3 class="h4 fw-bold mb-2">Maintenance & Repair</h3>
                            <p class="text-muted mb-3">
                                Ongoing maintenance and repair services to keep your property in excellent condition year-round.
                            </p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Preventive Maintenance</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Emergency Repairs</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Seasonal Services</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Property Inspections</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-warning bg-opacity-10 border-warning">
                <div class="card-body p-5 text-center">
                    <h2 class="h3 fw-bold mb-4">Why Choose Us?</h2>
                    <div class="row g-4">
                        <div class="col-md-3">
                            <i class="bi bi-award display-4 text-warning mb-3"></i>
                            <h5 class="fw-bold">Licensed & Insured</h5>
                            <p class="text-muted small">Fully licensed and insured for your peace of mind</p>
                        </div>
                        <div class="col-md-3">
                            <i class="bi bi-people display-4 text-warning mb-3"></i>
                            <h5 class="fw-bold">Experienced Team</h5>
                            <p class="text-muted small">Skilled professionals with years of expertise</p>
                        </div>
                        <div class="col-md-3">
                            <i class="bi bi-cash-coin display-4 text-warning mb-3"></i>
                            <h5 class="fw-bold">Competitive Pricing</h5>
                            <p class="text-muted small">Fair and transparent pricing on all projects</p>
                        </div>
                        <div class="col-md-3">
                            <i class="bi bi-hand-thumbs-up display-4 text-warning mb-3"></i>
                            <h5 class="fw-bold">Quality Guarantee</h5>
                            <p class="text-muted small">Commitment to excellence in every project</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mb-5">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body p-5">
                <h2 class="h3 fw-bold mb-3">Ready to Work With Us?</h2>
                <p class="lead mb-4">Let's discuss your construction project today</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-warning btn-lg">
                        <i class="bi bi-envelope me-2"></i>Get a Free Quote
                    </a>
                    <a asp-controller="Testimonials" asp-action="Index" class="btn btn-outline-warning btn-lg">
                        <i class="bi bi-chat-heart me-2"></i>Read Testimonials
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        }
        .service-icon {
            min-width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}
